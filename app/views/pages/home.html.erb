<% provide(:title, 'Home') %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to the InstaClone</h1>
  <h2>
    This is the home page for the
    <a href="https://www.instagram.com/?hl=ja">instagram</a>
    pakuri application.
  </h2>
  <%= link_to "アカウント登録する", new_registration_path(resource_name), class: "btn btn-lg btn-primary" %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to " #{OmniAuth::Utils.camelize(provider)}でログインする", omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-primary" %>
    <% end %>
  <% end %>
</div>
<% end %>
